linha_resumo = {
    'frase': 'MÉDIA GERAL',
    'n_palavras': df['n_palavras'].mean().round(2),
    'tags': {},
    'vetor': [],
    'icoer': media_icoer
}

df.loc[len(df)] = linha_resumo
